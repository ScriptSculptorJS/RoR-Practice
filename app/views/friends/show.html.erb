<div class="jumbotron bg-light p-5 rounded-3 ">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    <%= @friend.email %> | 
    <%= @friend.phone %> | 
    <%= @friend.twitter %>
  </p>
  <hr class="my-4">
  <div>
    <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary btn-sm" %>
    <%= link_to "Back to friends", friends_path, class:"btn btn-secondary btn-dark btn-sm" %>
    <br/>
    <br/>
    <%= button_to "Destroy this friend", @friend, method: :delete, class:"btn btn-danger btn-sm" %>
  </div>
</div>